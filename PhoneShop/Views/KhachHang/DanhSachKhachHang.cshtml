@model IEnumerable<PhoneShop.Data.KhachHang>

@{
    ViewData["Title"] = "Danh Sách Khách Hàng";
}

<h2>Danh Sách Khách Hàng</h2>

<!-- Link to the create view -->
<a href="/KhachHang/ThemKhachHang" class="btn btn-primary">Thêm Khách Hàng</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Mã KH</th>
            <th>Họ Tên</th>
            <th>Email</th>
            <th>Điện Thoại</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var khachHang in Model)
        {
            <tr>
                <td>@khachHang.MaKh</td>
                <td>@khachHang.HoTen</td>
                <td>@khachHang.Email</td>
                <td>@khachHang.DienThoai</td>
                <td>
                    <!-- Link to the edit view, passing the customer ID -->
                    <a href="/KhachHang/SuaKhachHang/@khachHang.MaKh" class="btn btn-warning">Sửa</a>

                    <!-- Link to the delete view, passing the customer ID -->
                    <a href="/KhachHang/XoaKhachHang/@khachHang.MaKh" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
