@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model PhoneShop.Areas.Admin.ViewModels.HangHoaViewModels

@{
    ViewData["Title"] = "SuaHangHoa";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.Admin.cshtml";
}

<h1>Sửa Hàng Hóa</h1>

<hr />
<div class="row">
    <div class="col-md-8 offset-md-2">
        <!-- Thêm enctype="multipart/form-data" để gửi tệp -->
        <form method="post" asp-action="SuaHangHoa" enctype="multipart/form-data">
            <input type="hidden" asp-for="MaHh" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Tên hàng hóa -->
            <div class="form-group">
                <label asp-for="TenHh" class="control-label">Tên Hàng Hóa</label>
                <input asp-for="TenHh" class="form-control" />
                <span asp-validation-for="TenHh" class="text-danger"></span>
            </div>

            <!-- Mã loại -->
            <div class="form-group">
                <label asp-for="MaLoai" class="control-label">Mã Loại</label>
                <select asp-for="MaLoai" class="form-control" asp-items="@(ViewBag.MaLoai)"></select>
                <span asp-validation-for="MaLoai" class="text-danger"></span>
            </div>

            <!-- Giá -->
            <div class="form-group">
                <label asp-for="DonGia" class="control-label">Đơn Giá</label>
                <input asp-for="DonGia" class="form-control" />
                <span asp-validation-for="DonGia" class="text-danger"></span>
            </div>

            <!-- Hình ảnh hiện tại -->
            <div class="form-group">
                <label for="Hinh">Hình ảnh hiện tại:</label>
                <div class="mb-3">
                    @if (!string.IsNullOrEmpty(Model.Hinh))
                    {
                        <img src="@Url.Content("~/Hinh/HangHoa/" + Model.Hinh)" alt="Current Image" style="max-width: 100px; max-height: 100px;" />
                    }
                    else
                    {
                        <span>No image</span>
                    }
                </div>
            </div>

            <!-- Chọn hình ảnh mới -->
            <div class="form-group">
                <label for="Hinh">Chọn hình ảnh mới (nếu có):</label>
                <input type="file" name="Hinh" class="form-control" />
            </div>

            <!-- Giảm giá -->
            <div class="form-group">
                <label asp-for="GiamGia" class="control-label">Giảm Giá</label>
                <input asp-for="GiamGia" class="form-control" />
                <span asp-validation-for="GiamGia" class="text-danger"></span>
            </div>

            @* <!-- Số lần xem -->
            <div class="form-group">
                <label asp-for="SoLanXem" class="control-label">Số Lần Xem</label>
                <input asp-for="SoLanXem" class="form-control" />
                <span asp-validation-for="SoLanXem" class="text-danger"></span>
            </div> *@

            <!-- Mô tả -->
            <div class="form-group">
                <label asp-for="MoTa" class="control-label">Mô Tả</label>
                <textarea asp-for="MoTa" class="form-control"></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>

            <!-- Mã nhà cung cấp -->
            <div class="form-group">
                <label asp-for="MaNcc" class="control-label">Mã Nhà Cung Cấp</label>
                <select asp-for="MaNcc" class="form-control" asp-items="@(ViewBag.MaNcc)"></select>
                <span asp-validation-for="MaNcc" class="text-danger"></span>
            </div>

            <!-- Nút submit -->
            <div class="form-group">
                <input type="submit" value="Lưu Thay Đổi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<!-- Liên kết quay lại danh sách -->
<div class="text-center mt-3">
    <a asp-action="DanhSachHangHoa" class="btn btn-secondary">Quay lại danh sách</a>
</div>