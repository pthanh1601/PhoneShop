@model IEnumerable<PhoneShop.Data.HangHoa>
@using PhoneShop.Data

@{
    ViewData["Title"] = "DanhSachHangHoa";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.Admin.cshtml";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h1>Danh sách hàng hóa</h1>

<p>
    <a asp-action="ThemHangHoa" class="btn btn-primary">Create New</a>
</p>
<p>@TempData["Message"]</p>

<style>
    .table td {
        word-wrap: break-word;
        white-space: normal;
        max-width: 200px;
    }

        .table td.mo-ta {
            line-height: 1.5;
            max-width: 300px;
            height: auto;
            overflow-wrap: break-word;
        }

        /* Cải thiện hình ảnh trong bảng */
        .table td img {
            max-width: 100px;
            max-height: 100px;
            object-fit: cover;
        }

    /* Cải thiện bảng */
    .table th, .table td {
        vertical-align: middle;
    }

    /* Cải thiện kiểu dáng của các nút */
    .action-buttons a {
        margin-right: 10px;
        padding: 5px 10px;
        text-decoration: none;
        border-radius: 4px;
        display: inline-block;
    }

    .action-buttons .edit-btn {
        background-color: #007bff;
        color: white;
    }

    .action-buttons .delete-btn {
        background-color: #dc3545;
        color: white;
    }

    .action-buttons a:hover {
        opacity: 0.8;
    }
</style>

<table class="table table-striped">
    <thead>
        <tr class="table-warning">
            <th>STT</th>
            <th>Tên Hàng Hóa</th>
            <th>Mã loại</th>
            <th>Đơn Giá</th>
            <th>Hình Ảnh</th>
            <th>Ngày SX</th>
            <th>Mô Tả</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@index</td>
                <td>@item.TenHh</td>  <!-- Hiển thị tên hàng hóa -->
                <td>@item.MaLoai</td>  <!-- Hiển thị mã loại -->
                <td>@item.DonGia</td>  <!-- Hiển thị đơn giá -->
                <td>
                    @if (!string.IsNullOrEmpty(item.Hinh))
                    {
                        <img src="@Url.Content("~/images/HangHoa/" + item.Hinh)" alt="@item.TenHh" style="max-width: 100px; max-height: 100px;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>@(item.NgaySx.HasValue ? item.NgaySx.Value.ToString("dd/MM/yyyy") : "Không có ngày")</td>
                <!-- Hiển thị ngày sản xuất với định dạng -->
                <td class="mo-ta">@item.MoTa</td>  <!-- Hiển thị mô tả -->
                <td class="action-buttons">
                    <a class="edit-btn" asp-action="SuaHangHoa" asp-route-MaHh="@item.MaHh">Edit</a>
                    <a class="delete-btn" asp-action="XoaHangHoa" asp-route-MaHh="@item.MaHh">Delete</a>
                </td>
            </tr>
            index++;
        }
    </tbody>
</table>
