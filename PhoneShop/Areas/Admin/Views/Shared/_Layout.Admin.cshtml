@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="@Url.Content("~/LayoutAdmin/assets/vendors/mdi/css/materialdesignicons.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/LayoutAdmin/assets/vendors/css/vendor.bundle.base.css")">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="@Url.Content("~/LayoutAdmin/assets/css/style.css")">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="@Url.Content("~/LayoutAdmin/assets/images/favicon.ico")">
    <script src="https://kit.fontawesome.com/4a8ccdbc24.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Thêm jQuery trước các script khác, ví dụ trong phần <head> hoặc ngay trước </body> -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>
</head>

<body>
    <div class="container-scroller">
        <!-- partial:../../partials/_navbar.html -->
        <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo" href="@Url.Content("~/index.html")">
                    <img src="@Url.Content("~/LayoutAdmin/assets/images/logo.svg")" alt="logo" />
                </a>
                <a class="navbar-brand brand-logo-mini" href="@Url.Content("~/index.html")">
                    <img src="@Url.Content("~/LayoutAdmin/assets/images/logo-mini.svg")" alt="logo" />
                </a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-stretch">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="mdi mdi-menu"></span>
                </button>
                <div class="search-field d-none d-md-block">
                    <form class="d-flex align-items-center h-100" action="#">
                        <div class="input-group">
                            <div class="input-group-prepend bg-transparent">
                                <i class="input-group-text border-0 mdi mdi-magnify"></i>
                            </div>
                            <input type="text" class="form-control bg-transparent border-0"
                                placeholder="Search projects">
                        </div>
                    </form>
                </div>
                <ul class="navbar-nav navbar-nav-right">
                    <li class="nav-item nav-profile dropdown">
                        <a class="nav-link dropdown-toggle" id="profileDropdown" href="#" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            <div class="nav-profile-text">
                                <p class="mb-1 text-black">
                                    <span>Hello, @User.Identity.Name</span>
                                </p>
                            </div>
                        </a>
                        <div class="dropdown-menu navbar-dropdown" aria-labelledby="profileDropdown">

                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-area="admin" asp-controller="HomeAdmin" asp-action="DangXuat">
                                <i class="mdi mdi-logout me-2 text-primary"></i> Signout
                            </a>
                        </div>
                    </li>



                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button"
                    data-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
            </div>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:../../partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">

                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            <span class="menu-title">Dashboard</span>
                            <i class="mdi mdi-home menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="collapse" href="#ui-basic" aria-expanded="false"
                            aria-controls="ui-basic">
                            <span class="menu-title">Quản lý sản phẩm</span>
                            <i class="menu-arrow"></i>
                            <i class="mdi mdi-package-variant menu-icon"></i>
                        </a>
                        <div class="collapse" id="ui-basic">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item"> <a class="nav-link" asp-area="Admin" asp-controller="HomeAdmin"
                                        asp-action="DanhMucSanPham"><span class="menu-title">Danh mục sản phẩm</span> <i
                                            class="mdi mdi-view-list menu-icon"></i></a></li>
                                <li class="nav-item"> <a class="nav-link" asp-area="Admin" asp-controller="HangHoas"
                                        asp-action="DanhSachHangHoa"><span class="menu-title">Sản phẩm </span><i
                                            class="mdi mdi-cart-outline menu-icon"></i></a></li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="HoaDon" asp-action="Index">
                            <span class="menu-title">Quản lý hoá đơn</span>
                            <i class="mdi mdi-file-document-outline menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="KhachHang" asp-action="DanhSachKhachHang">
                            <span class="menu-title">Quản Lý Khách Hàng</span>
                            <i class="mdi mdi-account-multiple-outline menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="NhaCungCaps" asp-action="Index">
                            <span class="menu-title">Quản Lý Nhà cung cấp</span>
                            <i class="mdi mdi-truck menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="NhanVien" asp-action="Index">
                            <span class="menu-title">Quản Lý Nhân viên</span>
                            <i class="mdi mdi-account-tie menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="PhanCong" asp-action="Index">
                            <span class="menu-title">Quản Lý Phân Công</span>
                            <i class="mdi mdi-calendar-check-outline menu-icon"></i>
                        </a>
                    </li>

                </ul>
            </nav>
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    @RenderBody()
                </div>
                <!-- content-wrapper ends -->
                <!-- partial:../../partials/_footer.html -->
                <footer class="footer">
                    <div class="container-fluid d-flex justify-content-between">
                        <span class="text-muted d-block text-center text-sm-start d-sm-inline-block">Copyright ©
                            bootstrapdash.com 2021</span>
                        <span class="float-none float-sm-end mt-1 mt-sm-0 text-end"> Free <a
                                href="https://www.bootstrapdash.com/bootstrap-admin-template/" target="_blank">Bootstrap
                                admin template</a> from Bootstrapdash.com</span>
                    </div>
                </footer>
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="@Url.Content("~/LayoutAdmin/assets/vendors/js/vendor.bundle.base.js")"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="@Url.Content("~/LayoutAdmin/assets/js/off-canvas.js")"></script>
    <script src="@Url.Content("~/LayoutAdmin/assets/js/hoverable-collapse.js")"></script>
    <script src="@Url.Content("~/LayoutAdmin/assets/js/misc.js")"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <!-- End custom js for this page -->
    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
    @RenderSection("Scripts", required: false)
    

</body>

</html>