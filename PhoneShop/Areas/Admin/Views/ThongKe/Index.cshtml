@{
    ViewData["Title"] = "Thống Kê";
}

<h2>@ViewData["Title"]</h2>

<div class="stat-box">
    <h3>Tổng Doanh Thu Tháng Này: @ViewBag.DoanhThuThangNay VND</h3>
</div>

<div class="stat-box">
    <h3>Sản Phẩm Bán Chạy Nhất</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Tên Sản Phẩm</th>
                <th>Số Lượng Bán</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.SanPhamBanChay)
            {
                <tr>
                    <td>@item.TenHangHoa</td>
                    <td>@item.SoLuongBan</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="stat-box">
    <h3>Doanh Thu Theo Khách Hàng</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Tên Khách Hàng</th>
                <th>Tổng Doanh Thu (VND)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.DoanhThuKhachHang)
            {
                <tr>
                    <td>@item.TenKhachHang</td>
                    <td>@item.TongDoanhThu</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="stat-box">
    <h3>Số Lượng Hóa Đơn Theo Trạng Thái</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Trạng Thái</th>
                <th>Số Lượng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.HoaDonTheoTrangThai)
            {
                <tr>
                    <td>@item.TenTrangThai</td>
                    <td>@item.SoLuong</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .stat-box {
        border: 1px solid #ccc;
        padding: 20px;
        margin-bottom: 20px;
        background-color: #f9f9f9;
    }

    h3 {
        font-size: 1.5em;
        color: #333;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

    .table th, .table td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    .table th {
        background-color: #f2f2f2;
    }
</style>
