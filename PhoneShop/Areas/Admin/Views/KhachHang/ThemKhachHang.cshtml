@model PhoneShop.ViewModels.RegisterVM

@{
    ViewData["Title"] = "Thêm Khách Hàng";
}

<h2>Thêm Khách Hàng</h2>

<form asp-action="ThemKhachHang" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="MaKh">Tài khoảng</label>
        <input asp-for="MaKh" class="form-control" required />
        <span asp-validation-for="MaKh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MatKhau">Mật khẩu</label>
        <input asp-for="MatKhau" type="password" class="form-control" required />
        <span asp-validation-for="MatKhau" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HoTen">Họ Tên</label>
        <input asp-for="HoTen" class="form-control" required />
        <span asp-validation-for="HoTen" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="DiaChi">Địa chỉ</label>
        <input asp-for="DiaChi" class="form-control" />
        <span asp-validation-for="DiaChi" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="DienThoai">Điện thoại</label>
        <input asp-for="DienThoai" class="form-control" />
        <span asp-validation-for="DienThoai" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="GioiTinh">Giới tính</label>
        <select asp-for="GioiTinh" class="form-control" required>
            <option value="true">Nam</option>
            <option value="false">Nữ</option>
        </select>
        <span asp-validation-for="GioiTinh" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="NgaySinh">Ngày Sinh</label>
        <input asp-for="NgaySinh" type="date" class="form-control" required />
        <span asp-validation-for="NgaySinh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Hình</label>
        <input type="file" name="Hinh" class="form-control" />
    </div>
    
    <button type="submit" class="btn btn-success">Thêm Khách Hàng</button>
</form>