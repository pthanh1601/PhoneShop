@model PhoneShop.Data.NhanVien
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.Admin.cshtml";
}

@{
    ViewData["Title"] = "Sửa Nhân Viên";
}

<h1 class="text-center text-primary my-4">@ViewData["Title"]</h1>

<form method="post" action="/Admin/NhanVien/Update">
    <!-- Mã Nhân Viên -->
    <div class="form-group">
        <label for="MaNv" class="font-weight-bold text-info">Mã Nhân Viên</label>
        <input type="text" class="form-control border-info" id="MaNv" name="MaNv" value="@Model.MaNv" readonly />
        @Html.ValidationMessageFor(model => model.MaNv, "", new { @class = "text-danger" })
    </div>

    <!-- Họ Tên -->
    <div class="form-group">
        <label for="HoTen" class="font-weight-bold text-info">Họ Tên</label>
        <input type="text" class="form-control border-info" id="HoTen" name="HoTen" value="@Model.HoTen" placeholder="Nhập họ tên nhân viên" />
        @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
    </div>

    <!-- Email -->
    <div class="form-group">
        <label for="Email" class="font-weight-bold text-info">Email</label>
        <input type="email" class="form-control border-info" id="Email" name="Email" value="@Model.Email" placeholder="Nhập email nhân viên" />
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>

    <!-- Mật Khẩu -->
    <div class="form-group">
        <label for="MatKhau" class="font-weight-bold text-info">Mật Khẩu</label>
        <input type="password" class="form-control border-info" id="MatKhau" name="MatKhau" value="@Model.MatKhau" placeholder="Nhập mật khẩu" />
        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
    </div>

    <!-- Nút Cập Nhật -->
    <button type="submit" class="btn btn-warning btn-lg btn-block">Cập Nhật Nhân Viên</button>
</form>
