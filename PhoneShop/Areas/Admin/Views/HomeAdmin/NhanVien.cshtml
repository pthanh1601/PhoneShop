@{
    ViewData["Title"] = "Danh Sách Nhân Viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.Admin.cshtml";
}

@model IEnumerable<PhoneShop.Data.NhanVien>

<h1 class="text-center my-4">Danh Sách Nhân Viên</h1>

<!-- Nút thêm nhân viên mới -->
<div class="text-center mb-4">
    <a href="/admin/nhanvien/create" class="btn btn-success">Thêm Nhân Viên Mới</a>
</div>

<!-- Bảng danh sách nhân viên -->
<table class="table table-bordered table-hover table-striped">
    <thead class="table-light">
        <tr>
            <th>MaNV</th>
            <th>Họ Tên</th>
            <th>Email</th>
            <th>Mật Khẩu</th>
            <th class="text-center">Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td class="text-center">@employee.MaNv</td>
                <td>@employee.HoTen</td>
                <td>@employee.Email</td>
                <td>@employee.MatKhau</td>
                <td class="text-center">
                    <!-- Nút sửa -->
                    <a href="/Admin/NhanVien/Edit/@employee.MaNv" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil-square"></i> Sửa
                    </a>

                    <!-- Nút xóa -->
                    <form method="post" action="/Admin/NhanVien/Delete" class="d-inline-block" onsubmit="return confirm('Bạn có chắc chắn muốn xóa nhân viên này?');">
                        <input type="hidden" name="MaNv" value="@employee.MaNv" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Xóa
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Bootstrap Icon CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
